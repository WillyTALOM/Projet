{% extends 'base.html.twig' %}

{% block title %}Hello SexeController!
{% endblock %}

{% block body %}
	<div class="col-12">
		<div class="row">

			{% for product in products %}
				<div class=" col-md-6 col-lg-4 col-xl-3 p-3">
					<div class="card">
						<img src="https://via.placeholder.com/360x360.jpg/CCCCC" class="card-img-top p-3" alt="image principale du jeu {{ product.sexe.name }}">

						{% if product.createdAt|date('Y-m-d') >= "now"|date_modify("-20 day")|date('Y-m-d') %}
							<span class="new_product">Nouveauté</span>
						{% endif %}
						<div class="card-body">
							<h5 class="card-title">{{ product.sexe.name }}</h5>
							<p class="card-text">{{ product.abstract|u.truncate(70, '...', false) }}</p>
						</div>
						<div class="card-body text-center">
							<a href="#" class="card-link btn btn-outline-primary">Détails</a>
							<a href="#" class="card-link btn btn-{{ product.quantity != 0 ? 'success' : 'danger disabled' }}">
								<i class="bi bi-cart-plus-fill"></i>
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

{% extends "baseAdmin.html.twig" %}

{% block title %}
	{{ app.request.attributes.get('_route') == 'create_user' ? 'création' : 'modification' }}
	utilisateur
{% endblock %}

{% block body %}

	<h1 class="mb-5 text-center">{{ app.request.attributes.get('_route') == 'create_user' ? 'Créer' : 'Modifier' }}
		un utilisateur</h1>


	{{ form_start(userForm) }}

	<div class="row">
		<div class="col-6">
			{{ form_label(userForm.first_name, 'Prénom') }}
			{{ form_errors(userForm.first_name) }}
			{{ form_widget(userForm.first_name, {
				                    'attr': {
				                        'placeholder': 'Ex.: John'
				                    }
				                }) }}
			{{ form_help(userForm.first_name) }}

		</div>
		<div class="col-6">
			{{ form_label(userForm.last_name, 'Nom') }}
			{{ form_errors(userForm.last_name) }}
			{{ form_widget(userForm.last_name, {
				                    'attr': {
				                        'placeholder': 'Ex.: DOE'
				                    }
				                }) }}
			{{ form_help(userForm.last_name) }}

		</div>

		<div class="col-3">
			{{ form_row(userForm.phone, {
                    'label': 'Téléphone',
                    'attr': {
                        'placeholder': 'Ex.: 0676321587'
                    }
                }) }}
		</div>
		<div class="col-3">
			{{ form_row(userForm.email, {
                    'label': 'Email',
                    'attr': {
                        'placeholder': 'Ex.: johndoe@gmail.fr'
                    }
                }) }}
		</div>

	</div>
	{# <div class="col-3">
			{{ form_row(userForm.roles, {
	                    'label': 'Email',
	                    'attr': {
	                        'placeholder': 'Ex.: johndoe@gmail.fr'
	                    }
	                }) }}
		</div> 
	
	
		{{ form_row(userForm.roles, {
																											                    'label': 'Prix Soldé (en €)',
																											                    'attr': {
																											                        'placeholder': 'Ex.: 123.45'
																											                    }
																											                }) }}
	</div> #}


	<div class="col-3">
		{{ form_row(userForm.password.first, {
            label: 'Mot de passe'
        }) }}


	</div>

	<div class="col-3">
		{{ form_row(userForm.password.second, {
            label: 'Répétez mot de passe'
        }) }}


	</div>


	<div class="row">
		<div class="col-12 text-end my-3">
			<a href="{{ path('admin_users')}}" class="btn btn-outline-danger me-3">Annuler</a>
			<button class="btn btn-success">{{ app.request.attributes.get('_route') == 'create_user' ? 'Créer' : 'Modifier' }}
			</button>
		</div>
	</div>
</div>
{{ form_end(userForm) }}{% endblock %}

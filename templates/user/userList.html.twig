{% extends "baseAdmin.html.twig" %}

{% block title %}utilisateurs
{% endblock %}

{% block body %}

	<h1 class="pb-5 text-center">Liste des utilisateurs</h1>

	<table class="table table-hover table-sm texxt-center align-middle">
		<thead>
			<tr>
				<th>N°</th>
				<th>Prénom</th>
				<th>Nom</th>
				<th>Téléphone</th>
				<th>Email</th>
				<th>Role</th>
				<th>Mot de passe</th>
				<th>Adresse</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users|reverse %}
				<tr>
					<td>{{ loop.revindex }}</td>
					<td>{{ user.firstName }}</td>
					<td>{{ user.lastName}}</td>
					<td>{{ user.phone}}</td>
					<td>{{ user.email }}</td>
					<td>{#{{ user.roles}}#}</td>
					<td>{#{{ user.passeword }}#}</td>
					<td>{#{{ user.address }}#}</td>
					<td>
						{# <a href="{{ path('update_user', {'id': user.id}) }}">
																																																																															<i class="bi bi-pencil-square text-primary"></i>
																																																																														</a>
																																																																														<a href="{{ path('delete_user', {'id': user.id}) }}">
																																																																															<i class="bi bi-trash3 text-danger"></i>
																																																																														</a> #}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div class="text-end mt-4">
		<a href="{{ path('create_user') }}" class="btn btn-success">Ajouter un utilisateur</a>
	</div>

{% endblock %}
